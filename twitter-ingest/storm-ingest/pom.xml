                                    <!--<shadedPattern>curator271.org.apache.curator</shadedPattern>-->
                                <!--</relocation>-->
                            <!--</relocations>-->
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>

    </build>

